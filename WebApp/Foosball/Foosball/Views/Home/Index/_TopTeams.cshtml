<div class="x_panel">
    <div class="x_title">
        <h2>Team Leaderboard</h2>
        <span class="pull-right">
            <a asp-area="" asp-controller="Teams" asp-action="Index">
                (All Teams)
            </a>    
        </span>
        <div class="clearfix"></div>
    </div>

    <ul class="list-unstyled top_profiles scroll-view">
        @{int count = 0;}
        @foreach (var rating in ViewBag.TopTeamRatings)
        {
            if (rating.Team != null)
            {
                count++;
                <li class="media event">
                    <a class="pull-left border-aero profile_thumb" style="padding: 9px;">
                        <i class="fa fa-users aero"></i>
                    </a>
                    <div class="media-body">
                        <a class="title" href="#">@count.</a>
                        <p>
                            <a asp-area="" asp-controller="Teams" asp-action="Profile" asp-route-id="@rating.Team.Id">
                                <strong>@rating.Team.Description</strong>
                            </a>
                        </p>
                        <p>
                            <span class="label label-default">@rating.ELO</span>
                            <span class="pull-right"><small>@rating.LastUpdatedAt</small></span>
                        </p>
                    </div>
                </li>
            }
        }
    </ul>
</div>